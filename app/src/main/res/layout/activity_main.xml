<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGrey"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_prox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/GreenUFFS"
        android:padding="20dp"
        android:text="Iniciar"
        android:textAllCaps="false"
        android:textColor="@color/WhiteSoft"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoAr"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:src="@drawable/arcoretrans"
        app:layout_constraintBottom_toTopOf="@+id/btn_prox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_instrucao1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Instruções: "
        android:textColor="@color/WhiteSoft"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_prox"
       />

    <TextView
        android:id="@+id/txt_instrucao2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Movimente e celular conforme indicado na tela até desaparecer o ícone de movimentação. "
        android:textColor="@color/WhiteSoft"
        android:textStyle="bold"
        android:textSize="15sp"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@+id/txt_instrucao1"
        />

    <TextView
        android:id="@+id/txt_instrucao3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Arraste para cima a barra de modelos na parte de baixo da tela, selecione o modelo desejado e toque
        na superfície indicada com vários pontos brancos para adicionar o modelo."
        android:textColor="@color/WhiteSoft"
        android:textStyle="bold"
        android:textSize="15sp"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@+id/txt_instrucao2"
        />
    <TextView
        android:id="@+id/txt_instrucao4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Você pode aumentar e rotacionar o modelo ao apontar o modelo utilizando o gesto de pinça com dois dedos, para cima e para baixo, e também para os lados."
        android:textColor="@color/WhiteSoft"
        android:textStyle="bold"
        android:textSize="15sp"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@+id/txt_instrucao3"
        />
    <TextView
        android:id="@+id/txt_instrucao5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Para remover um modelo, só apontar nele e clicar no botão na parte de cima, escrito remover."
        android:textColor="@color/WhiteSoft"
        android:textStyle="bold"
        android:textSize="15sp"
        android:justificationMode="inter_word"
        app:layout_constraintTop_toBottomOf="@+id/txt_instrucao4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>